<?xml version="1.0"?>
<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>
<dialog id="job-entry-dialog"
    xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
    xmlns:pen="http://www.pentaho.org/2008/xul" 
	title="${JobEntryDialog.Title}"
	resizable="true"
    height="600" width="800"
	appicon="ui/images/spoon.ico"
	buttons="accept"
	buttonalign="end" 
	buttonlabelaccept="${Dialog.Close}" 
	ondialogaccept="">
	
	<vbox>
		<hbox>
			<label value="${JobEntry.Name.Label}" />
			<textbox id="jobentry-name" flex="1" multiline="false"/>
		</hbox>
		<hbox>
			<label value="${JobEntry.HadoopJob.Name.Label}" />
			<textbox id="jobentry-hadoopjob-name" flex="1" multiline="false"/>
		</hbox>
		<hbox>
			<label value="${JobEntry.HadoopJob.Jar.Label}" />
			<textbox id="jobentry-hadoopjob-jar" flex="1" multiline="false"/>
		</hbox>
	</vbox>
	
	<vbox>
		<label value="${JobEntry.Name.Label}"/>
		<hbox>
		  <radio label="${JobEntryHadoopJobExecutor.ModeSimple.Label}"/>
		  <radio label="${JobEntryHadoopJobExecutor.ModeAdvanced.Label}" selected="true"/>
		</hbox>
	</vbox>
	
	<vbox>
		
	</vbox>
	
</dialog>
